<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="180dip"
                android:background="@color/transparent">

    <ImageView
        android:id="@+id/offerImage"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/vendor_icon"
        android:padding="5.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/bigicon"/>

    <TextView
        android:id="@+id/txtStoreName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/offerImage"
        android:ellipsize="marquee"
        android:focusable="true"
        android:paddingBottom="3.0dip"
        android:paddingLeft="5.0dip"
        android:paddingTop="3.0dip"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#ff2d2d2d"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtOfferDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStoreName2"
        android:layout_toRightOf="@+id/offerImage"
        android:paddingLeft="5.0dip"
        android:paddingTop="1.0dip"/>

    <ImageButton
        android:id="@+id/offer_inner_share2"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_below="@+id/txtOfferDesc2"
        android:layout_gravity="right"
        android:layout_toRightOf="@+id/offerImage"
        android:background="@null"

        android:src="@drawable/share_android"/>
</RelativeLayout>