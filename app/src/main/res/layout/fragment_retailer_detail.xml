    </LinearLayout>

    <!-- android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_alignTop="@+id/txtCompanyName"
            android:layout_centerInParent="true" -->


    <FrameLayout
        android:id="@+id/frameID"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rel1">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBigLogo"
                android:layout_width="fill_parent"
                android:layout_height="200.0dip"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/map_on" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgBigLogo"
                android:paddingBottom="8.0dip"
                android:paddingLeft="15.0dip"
                android:text="Address"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCurrentOffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBigLogo"
                android:paddingLeft="10.0dip"
                android:paddingTop="6.0dip"
                android:text="Current Offers"
                android:textColor="@android:color/black"
                android:textSize="16.0dip" />

            <ListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/txtCurrentOffers"
                android:clipToPadding="false"
                android:paddingBottom="70dip" />
        </RelativeLayout>

    </FrameLayout>

    <!-- TODO Add Up Triangle here? -->
    <!-- TODO Possibly round corners too -->

    <LinearLayout
        android:id="@+id/ellipe_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1"
        android:layout_margin="10dip"
        android:background="@color/white"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clipToPadding="false" />

    </LinearLayout>
</RelativeLayout>
