    <LinearLayout
        android:id="@+id/rel1"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_weight="1.0"
        android:background="@color/Red_700"
        android:orientation="horizontal"
        android:padding="8.0dip">

        <!--<ImageButton
